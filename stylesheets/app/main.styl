// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import 'footer'


// your styles here:
body
  color $text
  font-size $fontMD

.carousel
  background-color #a59ad2
  color $carouselText

.carousel-inner
  > .item
    > img
      margin 0 auto
      max-height 650px
      min-width auto
    > .carousel-caption
      text-align left
      font-size $fontLG

.blur-up
  -webkit-filter blur(5px)
  filter blur(5px)
  transition
    filter 400ms ease 100ms
    -webkit-filter 400ms ease 100ms

.blur-up.lazyloaded
  -webkit-filter blur(0)
  filter blur(0)

.fade-box .lazyload
.fade-box .lazyloading
  opacity 0
  transition opacity 400ms ease 100ms

.fade-box img.lazyloaded
  opacity 1
